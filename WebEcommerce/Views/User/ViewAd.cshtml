@model WebEcommerce.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/img/14560020750060463280.png" class="img img-responsive" style="width:100%" />
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/adlisting2.gif" class="img img-responsive" style=" height:500px;" />
    </div>



    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:300PX; height:300PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.pro_des</p>
        </div>

        <div>
            <h3>Price: @Model.pro_price</h3>
        </div>

        <div>
            <h3>Category: @Model.cat_name</h3>
        </div>

        <div>
            <h3>Posted by: @Model.u_name <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /> </h3>
        </div>

        <div>
            <h3>Contact: @Model.u_contact </h3>
        </div>


    </div>




    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
    </div>


</div>